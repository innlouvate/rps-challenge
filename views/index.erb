<html>
<head>
  <title>R-P-S-L-S</title>
  <link href="/css/stylesheet.css" rel="stylesheet" type="text/css" />
  <link href='https://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>
</head>

<body>
  <form action="/oneplayer">
      <input type='submit' value='Play Sheldon'>
  </form>

  <form action="/twoplayers">
      <input type='submit' value='Play a friend'>
  </form>

  <% if @no_players==1 %>
    <form action="/names1" method="post" >
      <input type="text" name="name_1">
      <input type="submit" value="Submit">
    </form>
  <% end %>

  <% if @no_players==2 %>
    <form action="/names2" method="post" >
      <input type="text" name="name_1" value="Player 1 name">
      <input type="text" name="name_2" value="Player 2 name">
      <input type="submit" value="Submit">
    </form>
  <% end %>
</body>

</html>
